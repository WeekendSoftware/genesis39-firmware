. /lib/functions.sh

config_load 'safe-dns'
config_get_bool enabled default enabled 0
config_get dns default dns default

# If other DNS servers are in the list, they'll cause some DNS queries to
# not be filtered, so we remove all servers from thes list if any are present.
# This also handles the case where the user requests that we uninstall/disable
# the safe-dns feature.
uci delete dhcp.@dnsmasq[0].server

if [ "$enabled" -eq 1 ] ; then
  # We don't want to use ISP DNS servers because they don't filter queries
  uci set network.wan.peerdns='0'
  uci set network.wan6.peerdns='0'

  # Configure the DNS server(s) that will handle filtering.
  case $dns in
    cleanbrowsing-adult-filter)
      echo cleanbrowsing-adult-filter activated
      uci add_list dhcp.@dnsmasq[0].server=185.228.168.10
      uci add_list dhcp.@dnsmasq[0].server=185.228.169.11
      ;;
    cleanbrowsing-family-filter)
      echo cleanbrowsing-family-filter activated
      uci add_list dhcp.@dnsmasq[0].server=185.228.168.168
      uci add_list dhcp.@dnsmasq[0].server=185.228.169.168
      ;;
    cisco-family-shield)
      echo cisco-family-shield activated
      uci add_list dhcp.@dnsmasq[0].server=208.67.222.123
      uci add_list dhcp.@dnsmasq[0].server=208.67.220.123
      ;;
    *)
      echo $dns is not supported.
      ;;
  esac
else
  # This is the OpenWrt default
  uci set network.wan.peerdns='1'
  uci set network.wan6.peerdns='1'
  echo ISP DNS server(s) activated
fi

uci commit dhcp
uci commit network

/etc/init.d/dnsmasq reload
/etc/init.d/network reload
