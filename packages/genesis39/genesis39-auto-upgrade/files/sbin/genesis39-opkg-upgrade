#Only upgrade if the package is installed and has an upgrade avaiable.
function upgrade() {
  opkg list-upgradable | grep -q ^$1\ && opkg upgrade $1
}

opkg update
upgrade genesis39-keys
upgrade genesis39-opkg
upgrade genesis39-auto-upgrade
upgrade genesis39-debug
upgrade genesis39-scripts
upgrade genesis39-dns
upgrade genesis39-wifi
upgrade genesis39

