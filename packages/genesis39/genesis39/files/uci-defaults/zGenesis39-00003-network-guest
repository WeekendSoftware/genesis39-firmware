# This script should only run once. Without this, check, this script
# would run again after an upgrade
#
. /lib/script-guard.sh
script_guard genesis39 00004_network_guest

. /lib/genesis39-functions.sh
. /lib/functions.sh

network=guest
zonename=guest
ip='192.168.2.1'

genesis39_add_network $network $ip
genesis39_add_zone $zonename $network
genesis39_force_zone_dns_to_router guest

exit 0
