START=99
STOP=99
EXTRA_COMMANDS="explain"
EXTRA_HELP="        explain Explains what this service is for"
 
boot() {
  echo "Updating wifi ssid(s)"
  /genesis39/service/firstboot/postfix-wifi-ssids

  echo "Disabling the genesis39-firstboot service"
  /etc/init.d/genesis39-firstboot disable
}

explain(){
  echo This service only executes once on boot. It automatically disables
  echo itsself and should NOT be executed again. It sets up some things
  echo that cannot be configured using /etc/uci-defaults
}
