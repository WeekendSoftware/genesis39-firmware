. /etc/openwrt_release
. /etc/genesis39_release

{
  echo
  echo " Website          : ${GENESIS39_WEBSITE}"
  echo " Genesis39 Version: ${GENESIS39_RELEASE}"
  echo " OpenWrt Version  : ${DISTRIB_RELEASE}"
  echo " Built On         : ${GENESIS39_BUILD_TIMESTAMP}"
  echo " GIT Hash         : ${GENESIS39_GIT_HASH}"
  echo
} >> /etc/banner

echo "DISTRIB_DESCRIPTION='Genesis 39 Project ${GENESIS39_VERSION}'" >> /etc/openwrt_release

{
  echo "VARIANT_ID='Genesis 39 Project'"
  echo "HOME_URL='${GENESIS39_Website}'"
  echo "BUG_URL='${GENESIS39_Website}'"
} >> /usr/lib/os-release

exit 0
