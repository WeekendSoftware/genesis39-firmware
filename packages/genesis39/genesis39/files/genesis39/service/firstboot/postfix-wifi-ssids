. /lib/functions.sh

#
# Change the Wifi SSID on each radio to Genesis39_FFFF where FFFF is the
# last part of the MAC address.
#
wifi_ssid() {
  local ssid=`uci get wireless.$1.ssid`
  uci -q batch <<-EOT
  set wireless.$1.ssid='${ssid}_$2'
EOT

}

lan=`uci get network.lan.ifname`
mac=`cat /sys/class/net/$lan/address | sed s/://g | grep -o '....$'`

config_load wireless
config_foreach wifi_ssid wifi-iface $mac
uci commit wireless

/sbin/wifi reload

exit 0
