#
# This script should only run once. Without this, check, this script
# would run again after an upgrade
#
. /lib/genesis39-functions.sh
run_once_guard genesis39 00040-wireless-enable
. /lib/functions.sh

wifi_enable() {
  uci -q batch <<-EOT
  delete wireless.$1.disabled
EOT
}

#
# For each wireless device... enable it.
#
config_load wireless
config_foreach wifi_enable wifi-device

exit 0
